{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "outDir": "build",
    "target": "es2018",
    "declaration": false,
    "checkJs": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "allowJs": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "importHelpers": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "incremental": true
  },
  "files": ["twin.d.ts"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "twin.d.ts"],
  "exclude": ["node_modules", "build"]
}
